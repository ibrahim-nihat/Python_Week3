#ibrahim nihat
enaz    = 1
enfazla = 1000
list1 =[]
def mükemmel():
    for sayi in range(enaz, enfazla - 1):
        toplam = 0
        for n in range(1, sayi - 1):
            if (sayi % n == 0):
                toplam += n
        if (toplam == sayi):
            list1.append(sayi)
    print(list1)
    list2 =list1[0]+list1[1]+list1[2]
    print(list2)
mükemmel()
